<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gallery.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="20,0"
            
            Spacing="25">
            

            <Label Text="Gallery" Style="{StaticResource Headline}" SemanticProperties.HeadingLevel="Level1" />

            <Image Source="{Binding Images}" x:Name="ShowImage" HeightRequest="350" WidthRequest="200"/>
            <Label FontSize="30" Text="" x:Name="ImageLabel" />

            <ImageButton
            Source="hearticon.png"
            WidthRequest="100"
            HeightRequest="100"
            BackgroundColor="Transparent"
            x:Name="IsLikable" 
            Clicked="IsLiked"
            
            />

            <Button
                Text="Show Image"
                Clicked="ShowImageClicked"
                WidthRequest="120"
                BackgroundColor="Wheat"
            />

            

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
